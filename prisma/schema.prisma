generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String         @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  forms         Form[]
  subscription  Subscription?
  purchases     FormPurchase[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Form {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String?
  creatorId       String         @db.ObjectId
  creator         User           @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  questions       Question[]
  responses       Response[]
  isActive        Boolean        @default(true)
  isPublished     Boolean        @default(false)
  publicId        String         @unique @default(cuid())
  settings        Json?
  logoUrl         String?
  organizationName String?
  headerColor     String?        @default("#2563EB")
  allowMultiple   Boolean        @default(false)
  showProgress    Boolean        @default(true)
  shuffleQuestions Boolean       @default(false)
  isPaid          Boolean        @default(false)
  purchaseId      String?        @unique @db.ObjectId
  purchase        FormPurchase?  @relation(fields: [purchaseId], references: [id])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // Quizo Features
  isQuiz          Boolean        @default(false)
  accessCode      String?        @unique
  timerType       String?        @default("none") // "none", "quiz", "question"
  timeLimit       Int?           @default(0)      // Total time in seconds
  perQuestionTime Int?           @default(0)      // Per question time in seconds
  allowSkip       Boolean        @default(true)
  college         String?
  clubName        String?

  @@index([creatorId])
}

model Question {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  formId      String   @db.ObjectId
  form        Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  type        String
  label       String
  description String?
  required    Boolean  @default(false)
  options     Json?
  validation  Json?
  order       Int
  
  // Quizo Features
  correctAnswer String?
  points        Int?    @default(1)
  timeLimit     Int?    // specific time limit overrides form default

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([formId])
}

model Response {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  formId     String   @db.ObjectId
  form       Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  answers    Json
  metadata   Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  // Quizo Features
  isQuizAttempt   Boolean  @default(false)
  score           Int?
  maxScore        Int?
  timeTaken       Int?     // Seconds
  completedAt     DateTime?

  @@index([formId])
  @@index([createdAt])
}

model Subscription {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @unique @db.ObjectId
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan          String   @default("organization")
  status        String   @default("active")
  amount        Int      @default(300)
  currency      String   @default("INR")
  startDate     DateTime @default(now())
  endDate       DateTime
  autoRenew     Boolean  @default(true)
  paymentId     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
}

model FormPurchase {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  formId        String?  @unique @db.ObjectId
  form          Form?
  amount        Int      @default(10)
  currency      String   @default("INR")
  status        String   @default("completed")
  paymentId     String?
  features      Json?
  createdAt     DateTime @default(now())

  @@index([userId])
}
